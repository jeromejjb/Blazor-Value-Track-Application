@page "/impact-metrics"

<div class="page-container">
    <div class="page-header">
        <h1>Impact Metrics</h1>
        <p class="header-description">
            Comprehensive analysis of value creation across different sectors.
            These metrics go beyond financial measures to show true societal impact.
        </p>
    </div>

    <div class="metrics-dashboard">
        <div class="metrics-grid">
            <div class="metric-card">
                <h3>Job Creation Impact</h3>
                <div class="chart-container">
                    <!-- Add chart component here -->
                    <div class="placeholder-chart">Chart Visualization</div>
                </div>
                <div class="metric-highlights">
                    <div class="highlight">
                        <span class="highlight-value">2.1M+</span>
                        <span class="highlight-label">Total Jobs Created</span>
                    </div>
                    <div class="highlight">
                        <span class="highlight-value">15%</span>
                        <span class="highlight-label">YoY Growth</span>
                    </div>
                </div>
            </div>

            <div class="metric-card">
                <h3>Innovation Index</h3>
                <div class="chart-container">
                    <div class="placeholder-chart">Chart Visualization</div>
                </div>
                <div class="metric-highlights">
                    <div class="highlight">
                        <span class="highlight-value">850+</span>
                        <span class="highlight-label">Patents Filed</span>
                    </div>
                    <div class="highlight">
                        <span class="highlight-value">$12B</span>
                        <span class="highlight-label">R&D Investment</span>
                    </div>
                </div>
            </div>

            <div class="metric-card">
                <h3>Societal Impact Score</h3>
                <div class="chart-container">
                    <div class="placeholder-chart">Chart Visualization</div>
                </div>
                <div class="metric-highlights">
                    <div class="highlight">
                        <span class="highlight-value">92/100</span>
                        <span class="highlight-label">Average Score</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 